<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChildProfileFragment">

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-124dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.622">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="37dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_stick_figure" />

                <TextView
                    android:id="@+id/childFullName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/limelight"
                    android:text="Full Name"
                    android:textAlignment="gravity"
                    android:textSize="36sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/ageRangeProfile"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginLeft="50dp"
                android:text="Age Range" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:text="Lesson 1: Alphabet"
                android:textAlignment="center" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="209dp"
                android:layout_marginLeft="40dp">

                <TextView
                    android:id="@+id/LessonOnePerc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="80dp"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="#5C5B5B"
                    android:textSize="30sp"
                    tools:text="80%" />

                <ProgressBar
                    android:id="@+id/LessonOneProg"
                    android:layout_width="216dp"
                    android:layout_height="199dp"
                    android:layout_marginLeft="50dp"
                    android:indeterminateOnly="false"
                    android:progressDrawable="@drawable/alphabet_circle"
                    tools:progress="80" />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:text="Lesson 2: Counting"
                android:textAlignment="center" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="209dp"
                android:layout_marginLeft="40dp">
                <TextView
                    android:id="@+id/LessonTwoPerc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="80dp"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="#5C5B5B"
                    android:textSize="30sp"
                    tools:text="80%" />

                <ProgressBar
                    android:id="@+id/LessonTwoProg"
                    android:layout_width="216dp"
                    android:layout_height="199dp"
                    android:layout_marginLeft="50dp"
                    android:indeterminateOnly="false"
                    android:progressDrawable="@drawable/counting_circle"
                    tools:progress="80" />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:text="Lesson 3: Addition"
                android:textAlignment="center" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="209dp"
                android:layout_marginLeft="40dp">

                <TextView
                    android:id="@+id/LessonThreePerc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="80dp"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="#5C5B5B"
                    android:textSize="30sp"
                    tools:text="80%" />

                <ProgressBar
                    android:id="@+id/LessonThreeProg"
                    android:layout_width="216dp"
                    android:layout_height="199dp"
                    android:layout_marginLeft="50dp"
                    android:indeterminateOnly="false"
                    android:progressDrawable="@drawable/addition_circle"
                    tools:progress="80" />
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>